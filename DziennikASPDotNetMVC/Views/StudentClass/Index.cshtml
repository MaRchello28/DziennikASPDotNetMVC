@model IEnumerable<DziennikASPDotNetMVC.Models.StudentClass>

@{
    ViewBag.Title = "Lista klas";
}

<h2>Lista klas</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID Klasy</th>
            <th>Numer</th>
            <th>Litera</th>
            <th>Nauczyciel</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var studentClass in Model)
        {
            <tr>
                <td>@studentClass.studentClassId</td>
                <td>@studentClass.number</td>
                <td>@studentClass.letter</td>
                <td>@studentClass.teacherId</td> <!-- Optionally, replace with teacher name -->
                <td>
                    <a asp-action="Details" asp-route-id="@studentClass.studentClassId" class="btn btn-info btn-sm">Szczegóły</a>
                    <a asp-action="Edit" asp-route-id="@studentClass.studentClassId" class="btn btn-warning btn-sm">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@studentClass.studentClassId" class="btn btn-danger btn-sm">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-success">Dodaj nową klasę</a>
</p>
