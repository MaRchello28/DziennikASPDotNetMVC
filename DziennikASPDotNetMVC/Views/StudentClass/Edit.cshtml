@model DziennikASPDotNetMVC.Models.StudentClass

@{
    ViewBag.Title = "Edytuj klasę";
}

<h2>Edytuj klasę</h2>

@using (Html.BeginForm("Edit", "StudentClass", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.studentClassId)

        <!-- Number -->
        <div class="form-group">
            @Html.LabelFor(model => model.number, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.number, new { @class = "form-control", placeholder = "Numer klasy" })
                @Html.ValidationMessageFor(model => model.number, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Letter -->
        <div class="form-group">
            @Html.LabelFor(model => model.letter, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.letter, new { @class = "form-control", placeholder = "Litera klasy" })
                @Html.ValidationMessageFor(model => model.letter, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Teacher ID -->
        <div class="form-group">
            @Html.LabelFor(model => model.teacherId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.teacherId, new { @class = "form-control", placeholder = "ID nauczyciela" })
                @Html.ValidationMessageFor(model => model.teacherId, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
