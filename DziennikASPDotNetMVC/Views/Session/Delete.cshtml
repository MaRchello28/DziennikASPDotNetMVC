@model DziennikASPDotNetMVC.Models.Session

@{
    ViewBag.Title = "Delete Session";
}

<h2>Delete Session</h2>
<h3>Are you sure you want to delete this?</h3>

<div>
    <dl class="dl-horizontal">
        <dt>Subject ID:</dt>
        <dd>@Html.DisplayFor(model => model.subjectId)</dd>

        <dt>Teacher ID:</dt>
        <dd>@Html.DisplayFor(model => model.teacherId)</dd>

        <dt>Day of Week:</dt>
        <dd>@Html.DisplayFor(model => model.dayOfTheWeek)</dd>

        <dt>Hour From:</dt>
        <dd>@Html.DisplayFor(model => model.hourFrom)</dd>

        <dt>Hour To:</dt>
        <dd>@Html.DisplayFor(model => model.hourTo)</dd>

        <dt>Sala:</dt>
        <dd>@Html.DisplayFor(model => model.sala)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
    }
</div>
