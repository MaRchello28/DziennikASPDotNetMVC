@{
    ViewData["Title"] = "Add Grades";
}

<h1>Add Grades for Students</h1>

<form method="post" asp-action="SaveGrades">
    <input type="hidden" name="studentClassId" value="@ViewBag.StudentClassId" />
    <input type="hidden" name="subjectId" value="@ViewBag.SubjectId" />

    <table>
        <thead>
            <tr>
                <th>Student</th>
                <th>Grade</th>
                <th>Wage</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in ViewBag.Students)
            {
                <tr>
                    <td>@student.name @student.surname</td>
                    <td>
                        <input type="number" name="grades[@student.userId].value" step="0.1" min="2" max="6" />
                    </td>
                    <td>
                        <input type="number" name="grades[@student.userId].wage" min="1" max="5" />
                    </td>
                    <td>
                        <input type="text" name="grades[@student.userId].description" />
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <button type="submit">Save Grades</button>
</form>
