@model DziennikASPDotNetMVC.Models.Mail

@{
    ViewBag.Title = "Delete Mail";
}

<h2>Delete Mail</h2>
<h3>Are you sure you want to delete this?</h3>

<div>
    <dl class="dl-horizontal">
        <dt>Subject:</dt>
        <dd>@Html.DisplayFor(model => model.subject)</dd>

        <dt>From:</dt>
        <dd>@Html.DisplayFor(model => model.from)</dd>

        <dt>To:</dt>
        <dd>@Html.DisplayFor(model => model.toClassId)</dd>

        <dt>Send Date:</dt>
        <dd>@Html.DisplayFor(model => model.send)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
    }
</div>
