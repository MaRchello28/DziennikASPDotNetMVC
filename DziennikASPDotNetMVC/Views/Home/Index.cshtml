@model DziennikASPDotNetMVC.Models.LoginViewModel

@{
    ViewData["Title"] = "E-Dziennik";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .full-page {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .form-container {
        width: 100%;
        max-width: 600px;
    }

    .card {
        padding: 20px;
    }
</style>

<div class="full-page">
    <div class="text-center">
        <h1 class="display-4">E-Dziennik</h1>
    </div>

    <div class="form-container">
        <div class="card">
            <div class="card-header text-center">
                <h4>Logowanie</h4>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div class="form-group">
                        <label asp-for="Username" class="control-label">Nazwa użytkownika</label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Password" class="control-label">Hasło</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4 text-center">
                        <button type="submit" class="btn btn-primary">Zaloguj się</button>
                    </div>
                    <div class="form-group mt-4 text-center">
                        <a href="@Url.Action("Index", "ForgotPassword")" class="btn btn-secondary">Nie pamiętam hasła</a>
                    </div>
                </form>
                @if (ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="alert alert-danger mt-3">
                        <strong>Błąd!</strong> Nieprawidłowa próba logowania.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal do wprowadzenia emaila -->
@if (ViewData["EmailRequired"] != null && (bool)ViewData["EmailRequired"])
{
    <div class="modal fade" id="emailModal" tabindex="-1" aria-labelledby="emailModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="emailModalLabel">Podaj swój email</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-action="UpdateEmail" method="post">
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" class="form-control" name="Email" required />
                        </div>
                        <button type="submit" class="btn btn-primary">Zapisz email</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Pokazuje modal po załadowaniu strony
        $(document).ready(function () {
            $('#emailModal').modal('show');
        });
    </script>
}