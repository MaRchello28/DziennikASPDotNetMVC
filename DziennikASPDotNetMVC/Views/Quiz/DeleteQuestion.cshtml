@model DziennikASPDotNetMVC.Models.Question

@{
    ViewData["Title"] = "Usuń Pytanie";
}

<h3>Usuń Pytanie</h3>

<div>
    <h4>Czy na pewno chcesz usunąć to pytanie?</h4>
    <dl class="dl-horizontal">
        <dt>Pytanie</dt>
        <dd>@Html.DisplayFor(model => model.question)</dd>
    </dl>

    <form asp-action="DeleteQuestionConfirmed" method="post">
        <input type="hidden" asp-for="questionId" />

        <div class="form-group">
            <input type="submit" value="Usuń" class="btn btn-danger" />
            <a asp-action="ManageQuestions" asp-route-quizId="@Model.quizId" class="btn btn-secondary">Anuluj</a>
        </div>
    </form>
</div>