@model DziennikASPDotNetMVC.Models.User

<h2>Usuń użytkownika</h2>

<h3>Czy na pewno chcesz usunąć tego użytkownika?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.userId</dd>

        <dt class="col-sm-2">Imię</dt>
        <dd class="col-sm-10">@Model.name</dd>

        <dt class="col-sm-2">Nazwisko</dt>
        <dd class="col-sm-10">@Model.surname</dd>

        <dt class="col-sm-2">Login</dt>
        <dd class="col-sm-10">@Model.login</dd>

        <dt class="col-sm-2">Hasło</dt>
        <dd class="col-sm-10">@Model.password</dd>

        <dt class="col-sm-2">Typ</dt>
        <dd class="col-sm-10">@Model.type</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="userId" />
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>
